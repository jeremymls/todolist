{% extends 'base.html.twig' %}

{% block header_img %}<img class="slide-image" src="{{ asset('img/todolist_content.jpg') }}" alt="todo list">{% endblock %}

{% block body %}
    <a href="{{ path('task_create') }}" class="btn btn-info">Créer une tâche</a>
    <div class="row mt-3" data-masonry='{"percentPosition": true }'>
        {% for task in tasks %}
        <div class="col-sm-4 col-lg-4 col-md-4 pe-md-4 mt-3">
            <div class="thumbnail border border-1 border-secondary p-3 rounded-3">
                <div class="caption">
                    <h4 class="float-end">{% if task.isDone %}<i class="fa-solid fa-check"></i>{% else %}<i class="fa-solid fa-xmark"></i>{% endif %}</h4>
                    <h4><a href="{{ path('task_edit', {'id' : task.id }) }}">{{ task.title }}</a></h4>
                    <p>{{ task.content | nl2br }}</p>
                    <em>Auteur : {{ task.user }}</em>
                </div>
                <div class="row">
                    <div class="col-auto">
                    <form action="{{ path('task_toggle', {'id' : task.id }) }}">
                        <button class="btn btn-success btn-sm" type="bouton">
                            {% if not task.isDone %}Marquer comme faite{% else %}Marquer non terminée{% endif %}
                        </button>
                    </form>
                    </div>
                    <div class="col-auto">
                    <form action="{{ path('task_delete', {'id' : task.id }) }}">
                        <button class="btn btn-danger btn-sm">Supprimer</button>
                    </form>
                    </div>
                </div>
            </div>
        </div>
        {% else %}
            <div class="alert alert-warning" role="alert">
                Il n'y a pas encore de tâche enregistrée. <a href="{{ path('task_create') }}" class="btn btn-warning">Créer une tâche</a>
            </div>
        {% endfor %}
    </div>
{% endblock %}
